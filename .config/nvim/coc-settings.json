{
    "explorer": {
        "width": 30,
        "icon": {
            "enableNerdfont": true
        },
        "previewAction": {
            "onHover": false
        },
        "keyMappings": {
            "global": {
                "<cr>": [
                    "expandable?",
                    [
                        "expanded?",
                        "collapse",
                        "expand"
                    ],
                    "open"
                ],
                "v": "open:vsplit",
                "s": "open:split",
                "t": "open:tab",
                "h": "collapse",
                "l": [
                    "expandable?",
                    "expand",
                    "open"
                ],
                "H": "gotoParent",
                "a": "addFile",
                "A": "addDirectory",
                "r": "rename",
                "d": "delete",
                "c": "copyFile",
                "x": "cutFile",
                "p": "pasteFile",
                "R": "refresh",
                "?": "help",
                "q": "quit"
            }
        },
        "file": {
            "showHiddenFiles": true,
            "column": {
                "git": {
                    "showIgnored": true
                },
                "indent": {
                    "indentLine": true
                },
                "clip": {
                    "copy": "",
                    "cut": ""
                }
            }
        },
        "floating": {
            "border": {
                "enable": true
            },
            "width": -20,
            "height": -10,
            "position": "center"
        }
    },
    "languageserver": {
        "rust": {
            "command": "rust-analyzer",
            "filetypes": [
                "rust"
            ],
            "rootPatterns": [
                "Cargo.toml"
            ]
        },
        "python": {
            "command": "pyright-langserver",
            "args": [
                "--stdio"
            ],
            "filetypes": [
                "python"
            ]
        }
    },
    "tsserver": {
        "enable": true,
        "enableJavascript": true,
        "watchOptions": {
            "watchFile": "useFsEvents",
            "watchDirectory": "useFsEvents",
            "fallbackPolling": "dynamicPriority"
        }
    },
    "typescript": {
        "suggest": {
            "completeFunctionCalls": true,
            "autoImports": true
        },
        "format": {
            "enabled": true
        },
        "preferences": {
            "importModuleSpecifier": "relative",
            "quoteStyle": "single"
        },
        "updateImportsOnFileMove": {
            "enabled": "always"
        },
        "implementationsCodeLens": {
            "enable": true
        },
        "referencesCodeLens": {
            "enable": true
        },
        "inlayHints": {
            "parameterNames": {
                "enabled": "all"
            },
            "variableTypes": {
                "enabled": true
            },
            "propertyDeclarationTypes": {
                "enabled": true
            },
            "functionLikeReturnTypes": {
                "enabled": true
            },
            "enumMemberValues": {
                "enabled": true
            }
        }
    },
    "eslint": {
        "enable": true,
        "autoFixOnSave": true,
        "filetypes": [
            "javascript",
            "javascriptreact",
            "typescript",
            "typescriptreact"
        ]
    },
    "prettier": {
        "disableSuccessMessage": true,
        "formatterPriority": 1,
        "statusItemText": "Prettier",
        "singleQuote": true,
        "trailingComma": "es5",
        "semi": true,
        "tabWidth": 2
    },
    "suggest": {
        "noselect": true,
        "enablePreselect": false,
        "snippetIndicator": "►",
        "maxCompleteItemCount": 20,
        "minTriggerInputLength": 2,
        "acceptSuggestionOnCommitCharacter": true
    },
    "diagnostic": {
        "errorSign": "✘",
        "warningSign": "⚠",
        "infoSign": "ℹ",
        "hintSign": "➤"
    },
    "coc": {
        "preferences": {
            "formatOnSaveFiletypes": [
                "rust",
                "typescript",
                "typescriptreact",
                "javascript",
                "python"
            ],
            "extensionUpdateCheck": "daily"
        }
    },
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
}
